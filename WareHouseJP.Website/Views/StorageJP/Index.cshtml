            <div class="package_content">
                <div class="package_item-wrap storejp-content">
                    <table id="storejp-table">
                        <thead>
                            <tr class="sort-row">
                                <th style="width:45px;"></th>
                                <th class="sort-column" data-sort="tracking-asc">
                                    MÃ TRACKING &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                    <div class="error">(*)</div>
                                </th>
                                <th style="width:45px;"></th>
                                <th style="width:145px;" class="sort-column" data-sort="delivery-asc">
                                    CTY GIAO NHẬN &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                    <div class="error">(*)</div>
                                </th>
                                <th style="width:145px;" class="sort-column" data-sort="address-asc">
                                    ĐỊA CHỈ NHẬN @*&nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>*@
                                    <div class="error">(*)</div>
                                </th>
                                <th style="width:155px;" data-sort="status-asc">
                                    TRẠNG THÁI &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                    <div class="error">(*)</div>
                                </th>
                                <th data-sort="notes-asc">
                                    GHI CHÚ &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                </th>
                                <th data-sort="weigh-asc">
                                    KL (KG) &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                    <div class="error-yellow">(*)</div>
                                </th>
                                <th style="width:115px;" data-sort="size-asc">
                                    KÍCH THƯỚC &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                    <div class="error-yellow">(*)</div>
                                </th>
                                <th style="width:100px;">
                                    HÌNH ẢNH
                                    <div class="error-yellow">(*)</div>
                                </th>
                                <th data-sort="date-asc">
                                    NGÀY NHẬN &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                </th>
                                <th data-sort="hour-asc">
                                    GIỜ NHẬN &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                </th>
                                <th style="width:100px;" class="trackingsub-column" data-sort="trackingsub-asc">
                                    KIỆN CON &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                </th>
                                <th style="width:50px;">
                                    XUẤT
                                </th>
                                <th style="width:50px;">
                                    TRẢ
                                </th>
                                <th style="width:100px;" data-sort="errorcontent-asc">
                                    LỖI ND &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                    <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                </th>
                            </tr>
                            <tr class="filter-jp">
                                <th></th>
                                <th><input class="form-control" /></th>
                                <th></th>
                                <th>
                                    @{var DeliveryId = ViewBag.DeliveryId; }
                                    @Html.DropDownList("DeliveryId", (IEnumerable<SelectListItem>)DeliveryId, "Tất cả", htmlAttributes: new { @class = "form-control" })
                                </th>
                                <th>
                                    @{var DeliveryAddress = ViewBag.DeliveryAddress; }
                                    @Html.DropDownList("DeliveryAddress", (IEnumerable<SelectListItem>)DeliveryAddress, "Tất cả", htmlAttributes: new { @class = "form-control" })
                                </th>
                                <th>
                                    <select class="form-control">
                                        <option value="0" selected="selected">Tất cả</option>
                                        <option value="6">Đã nhận</option>
                                        <option value="7">Đang kiểm</option>
                                        <option value="8">Đã kiểm</option>
                                    </select>
                                </th>
                                <th><input class="form-control" /></th>
                                <th><input class="form-control" /></th>
                                <th><input class="form-control" /></th>
                                <th></th>
                                <th class="datepicker" style="position:relative;"><input class="form-control" /></th>
                                <th><input class="form-control" /></th>
                                <th><input class="form-control" /></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            @using (Html.BeginForm("Add", "StorageJP", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <tr class="add-item">
                                    <th></th>
                                    <th><input name="TrackingCode" id="TrackingCode" class="form-control display-error-form" /></th>
                                    <th></th>
                                    <th>
                                        @Html.DropDownList("DeliveryId", (IEnumerable<SelectListItem>)DeliveryId,"", htmlAttributes: new { @class = "form-control display-error-form" })
                                    </th>
                                    <th>
                                        @Html.DropDownList("DeliveryAddress", (IEnumerable<SelectListItem>)DeliveryAddress, "", htmlAttributes: new { @class = "form-control display-error-form" })
                                    </th>
                                    <th>
                                        <select name="StatusId" id="StatusId" class="form-control display-error-form">
                                            <option value=""></option>
                                            <option value="6">Đã nhận</option>
                                            <option value="7" disabled>Đang kiểm</option>
                                            <option value="8" disabled>Đã kiểm</option>
                                        </select>
                                    </th>
                                    <th><input class="form-control" name="notes" /></th>
                                    <th><input class="form-control" type="number" name="Weigh" /></th>
                                    <th>
                                        @{var Size = ViewBag.Size; }
                                        @Html.DropDownList("Size", (IEnumerable<SelectListItem>)Size, "", htmlAttributes: new { @class = "form-control" })
                                    </th>
                                    <th></th>
                                    <th class="datepicker" style="position:relative;"><input value="@ViewBag.ReceivedDate" name="ReceivedDate" class="form-control" /></th>
                                    <th><input class="form-control" value="@ViewBag.ReceivedHour" name="ReceivedHour" /></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                <tr class="filter-jp-action">
                                    <td colspan="16" class="center">
                                        <div>
                                            <button type="submit" id="btn-save-add" class="btn btn-success btn-sm">Lưu</button>
                                            <button type="button" class="cancel-add-item btn btn-danger btn-sm">Hủy</button>
                                        </div>
                                    </td>
                                </tr>
                             }
                        </thead>
                        <tbody class="tbody">
                            @{Html.RenderPartial("_ItemOfPage", Model); }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

        <div class="">
            <div class="col-xs-12 wasehouse-info"></div>
        </div>
    </div>
</div>
