@model IEnumerable<Agency>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - WareHouseJP Better Life</title>

    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link href="~/better-life/favicon.ico" rel="shortcut icon">
    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="~/better-life/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/better-life/assets/font-awesome/4.2.0/css/font-awesome.min.css" />

    <!-- text fonts -->
    <link rel="stylesheet" href="~/better-life/assets/fonts/fonts.googleapis.com.css" />

    <!-- ace styles -->
    <link rel="stylesheet" href="~/better-life/assets/css/ace.min.css" />

    <!--[if lte IE 9]>
            <link rel="stylesheet" href="~/better-life/assets/css/ace-part2.min.css" />
        <![endif]-->
    <link rel="stylesheet" href="~/better-life/assets/css/ace-rtl.min.css" />

    <!--[if lte IE 9]>
          <link rel="stylesheet" href="~/better-life/assets/css/ace-ie.min.css" />
        <![endif]-->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="~/better-life/assets/js/html5shiv.min.js"></script>
        <script src="~/better-life/assets/js/respond.min.js"></script>
        <![endif]-->

</head>

<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container" style="width:70%;margin-top:30px;">
                        <div class="center">
                            <img src="~/better-life/assets/images/logo.png">
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header yellow lighter bigger">
                                            <i class="ace-icon fa fa-university blue"></i> Chọn đại lý làm việc
                                        </h4>
                                    </div>
                                    <div>
                                        @foreach (var item in Model)
                                        {
                                            <div class="item-agency" onclick="windown.location.href = '/Agency/SetAgency/@item.Id'">
                                                <div class="item-code">@item.Id</div>
                                                <div class="item-name">@item.Name</div>
                                                <div class="item-address">@item.Address</div>
                                            </div>
                                        }
                                        <div style="clear:both;"></div>
                                    </div>
                                    <!-- /.widget-main -->
                                </div>
                                <!-- /.widget-body -->
                            </div>
                            <!-- /.login-box -->

                        </div>
                        <!-- /.position-relative -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.main-content -->
    </div>
    <!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script src="~/better-life/assets/js/jquery.2.1.1.min.js"></script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script src="~/better-life/assets/js/jquery.1.11.1.min.js"></script>
    <![endif]-->
    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='~/better-life/assets/js/jquery.min.js'>" + "<" + "/script>");
    </script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script type="text/javascript">
     window.jQuery || document.write("<script src='~/better-life/assets/js/jquery1x.min.js'>"+"<"+"/script>");
    </script>
    <![endif]-->
    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='~/better-life/assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>

    <!-- inline scripts related to this page -->
    <script type="text/javascript">
        jQuery(function ($) {
            $('body').attr('class', 'login-layout light-login');
            $('#id-text2').attr('class', 'grey');
            $('#id-company-text').attr('class', 'blue');
            e.preventDefault();
        });
    </script>
</body>

</html>