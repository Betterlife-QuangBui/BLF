
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<script src="~/better-life/assets/js/jquery.2.1.1.min.js"></script>
<!--notifyjs-master-->
<link href="~/notifyjs-master/dist/styles/metro/notify-metro.css" rel="stylesheet" />
<script src="~/notifyjs-master/dist/notify.js"></script>
<script src="~/notifyjs-master/dist/styles/metro/notify-metro.js"></script>
<!--/notifyjs-master-->
<h2>Index</h2>
<button onclick="notify('white')">White</button>
<button onclick="notify('black')">Black</button>
<button onclick="notify('error')">Err</button>
<button onclick="notify('success')">Success</button>
<button onclick="notify('warning')">Warning</button>
<button onclick="notify('info')">Info</button>
<script>
    function notify(style) {
        $.notify({
            title: 'Email Notification',
            text: 'You received an e-mail from your boss. You should read it right now!',
            image: "<img src='/images/2.png'/>"
        }, {
            style: 'metro',
            className: style,
            autoHide: false,
            clickToHide: true
        });
    }
</script>
