@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Đăng nhập hệ thống - WareHouseJP Better Life</title>

    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link href="~/better-life/favicon.ico" rel="shortcut icon">
    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="~/better-life/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/better-life/assets/font-awesome/4.2.0/css/font-awesome.min.css" />

    <!-- text fonts -->
    <link rel="stylesheet" href="~/better-life/assets/fonts/fonts.googleapis.com.css" />

    <!-- ace styles -->
    <link rel="stylesheet" href="~/better-life/assets/css/ace.min.css" />

    <!--[if lte IE 9]>
            <link rel="stylesheet" href="~/better-life/assets/css/ace-part2.min.css" />
        <![endif]-->
    <link rel="stylesheet" href="~/better-life/assets/css/ace-rtl.min.css" />
    <link href="~/Content/custom.css" rel="stylesheet" />

    <!--[if lte IE 9]>
          <link rel="stylesheet" href="~/better-life/assets/css/ace-ie.min.css" />
        <![endif]-->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="~/better-life/assets/js/html5shiv.min.js"></script>
        <script src="~/better-life/assets/js/respond.min.js"></script>
        <![endif]-->
</head>

<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <span class="logo-betterlife">Better Life Japan</span>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        @if (ViewBag.Message == null)
                                        {
                                            <h4 class="header yellow lighter bigger">
                                                <i class="ace-icon fa fa-user yellow"></i> Vui lòng nhập thông tin đăng nhập hệ thống
                                            </h4>
                                        }
                                        else
                                        {
                                            <h4 class="header red lighter bigger">
                                                <i class="ace-icon fa fa-fire red"></i> @ViewBag.Message
                                            </h4>
                                        }
                                        <div class="space-6"></div>
                                        @using (Html.BeginForm("Index", "Security", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true)
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                                                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                                                        <i class="ace-icon fa fa-user"></i>

                                                    </span>

                                                </label>

                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.PasswordFor(model => model.password,new { @class = "form-control", @placeholder = "Password",@style= "width: 100%;"  })
                                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                                        <i class="ace-icon fa fa-lock"></i>
                                                    </span>
                                                </label>

                                                @*<label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.DropDownList("role", null, htmlAttributes: new { @class = "form-control" })
                                                        @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
                                                    </span>
                                                </label>*@

                                                <div class="space"></div>

                                                <div class="clearfix">
                                                    <label class="inline">
                                                        <input type="checkbox" checked value="true" name="reMember" class="ace">
                                                        <span class="lbl"> Lưu tài khoản</span>
                                                    </label>
                                                    @*// onclick="return checkvalidate();"*@
                                                    <button type="submit" class="width-35 pull-right btn btn-warning primary-btn">
                                                        <i class="ace-icon fa fa-key"></i>
                                                        <span class="bigger-110">Đăng nhập</span>
                                                    </button>
                                                </div>

                                                <div class="space-4"></div>
                                            </fieldset>
                                        }
                                        <div class="space-6"></div>


                                    </div>
                                    <!-- /.widget-main -->

                                    <div class="toolbar clearfix">

                                    </div>
                                </div>
                                <!-- /.widget-body -->
                            </div>
                            <!-- /.login-box -->

                        </div>

                        <div class="center" style="margin-top:10px;">
                            <span class="coppy-betterlife" style="float:left;font-weight:bold;">Copyright &copy; @DateTime.Now.Year. Customs Clearance</span>
                            <span class="version-betterlife" style="float:right;">Version 1.0.0</span>
                        </div>
                        <div style="clear:both;"></div>
                        <!-- /.position-relative -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.main-content -->
    </div>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script src="~/better-life/assets/js/jquery.2.1.1.min.js"></script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script src="~/better-life/assets/js/jquery.1.11.1.min.js"></script>
    <![endif]-->
    <!--[if !IE]> -->
    <script type="text/javascript">
        window.jQuery || document.write("<script src='~/better-life/assets/js/jquery.min.js'>" + "<" + "/script>");
    </script>
    <script src="~/Scripts/jquery-1.10.2.intellisense.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script type="text/javascript">
     window.jQuery || document.write("<script src='~/better-life/assets/js/jquery1x.min.js'>"+"<"+"/script>");
    </script>
    <![endif]-->
    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='~/better-life/assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>

    <!-- inline scripts related to this page -->
    <script type="text/javascript">
        jQuery(function ($) {
            $('body').attr('class', 'login-layout light-login');
            $('#id-text2').attr('class', 'grey');
            $('#id-company-text').attr('class', 'blue');
            //e.preventDefault();

        });
        $(document).on('click', '.btn-checkvalidate', function () {

        });
        function checkvalidate() {
            var username = $('input[name="userName"]').val();
            var password = $('input[name="password"]').val();
            var role = $('select[name="role"]').val();
            var chkUser = true, chkPass = true, chkRole = true;
            if (username == '') {
                $('input[name="userName"]').css("border", "1px solid red");
                $('input[name="userName"]').focus();
                chkUser = false;
            }
            if (password == '') {
                $('input[name="password"]').css("border", "1px solid red");
                $('input[name="password"]').focus();
                chkPass = false;
            }
            if (role == '') {
                $('select[name="role"]').css("border", "1px solid red");
                $('select[name="role"]').focus();
                chkRole = false;
            }
            if (chkPass && chkRole && chkUser) return true;
            else return false;
        }
    </script>


</body>

</html>