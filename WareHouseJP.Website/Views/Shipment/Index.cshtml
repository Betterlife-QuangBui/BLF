@model PagedList.IPagedList<Shipment>
@using PagedList.Mvc;
@using PagedList;
@{ var PageUtils = new PageUtils(); UserPage user = new UserPage();}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="/">Trang chủ</a>
        </li>

        <li>
            <a href="/Shipment">Lô hàng</a>
        </li>
        <li class="active">Danh sách Lô hàng</li>
    </ul>
    <!-- /.breadcrumb -->
    <!-- /.nav-search -->
</div>

<div class="page-content">
    <div class="row">
        <div class="shipment col-md-9">
            <div class="shipment_header">
                <div class="status_notes"></div>
                <a href="#" class="shipment_add add-item-btn">
                    <i class="fa fa-plus"></i>
                </a>
                <div class="display-column display-column-choose">
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-primary">Thông tin hiển thị</button>
                        <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu hiden-column">
                            <li>
                                <a href="#">
                                    <label class="pos-rel">
                                        <input id="col-shipping" type="checkbox" checked class="ace" data-index="1" />
                                        <span class="lbl"> Tên lô hàng</span>
                                    </label>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <label class="pos-rel">
                                        <input id="col-shipper" checked type="checkbox" class="ace" data-index="3" />
                                        <span class="lbl"> Ngày bay dự kiến</span>
                                    </label>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <label class="pos-rel">
                                        <input id="col-mawb" type="checkbox" checked class="ace" data-index="4" />
                                        <span class="lbl"> Trạng thái</span>
                                    </label>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <label class="pos-rel">
                                        <input id="col-date" type="checkbox" checked class="ace" data-index="5" />
                                        <span class="lbl"> Ghi chú</span>
                                    </label>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <label class="pos-rel">
                                        <input id="col-from" type="checkbox" checked class="ace" data-index="6" />
                                        <span class="lbl"> Số kg</span>
                                    </label>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <label class="pos-rel">
                                        <input id="col-status" type="checkbox" checked class="ace" data-index="7" />
                                        <span class="lbl"> Số kiện con</span>
                                    </label>
                                </a>
                            </li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#" class="default-column">Default view</a></li>
                        </ul>
                    </div>
                </div>
                <div class="shipment_add_body"></div>
            </div>
            <div class="shipment_content">
                <table id="storejp-table">
                    <thead>
                        <tr class="sort-row">
                            <th style="width:50px;"></th>
                            <th class="sort-column" data-sort="tracking-asc">
                                TÊN LÔ HÀNG &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                <div class="error">(*)</div>
                            </th>
                            <th style="width:50px;"></th>
                            <th data-sort="date-asc">
                                NGÀY BAY DỰ KIỆN &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                                <div class="error">(*)</div>
                            </th>
                            <th style="width:155px;" data-sort="status-asc">
                                TRẠNG THÁI &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                            </th>
                            <th data-sort="notes-asc">
                                GHI CHÚ &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                            </th>
                            <th class="trackingsub-column" data-sort="weigh-asc">
                                SỐ KG &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                            </th>
                            <th class="trackingsub-column" data-sort="trackingsub-asc">
                                SỐ KIỆN CON &nbsp;<span class="sort sort-asc"><i class="fa fa-sort-alpha-asc" aria-hidden="true"></i></span>
                                <span class="sort sort-desc"><i class="fa fa-sort-alpha-desc" aria-hidden="true"></i></span>
                            </th>
                        </tr>
                        <tr class="filter-jp">
                            <th></th>
                            <th><input class="form-control" /></th>
                            <th></th>
                            
                            <th class="datepicker" style="position:relative;"><input class="form-control" /></th>
                            <th>
                                <select class="form-control" data-live-search = "true">
                                    <option value="0">Tất cả</option>
                                    <option selected value="-1">Đang thực hiện</option>
                                    <option value="-2">Đã hoàn thành</option>
                                </select>
                            </th>
                            <th><input class="form-control" /></th>
                            <th><input class="form-control" /></th>
                            <th><input class="form-control" /></th>
                        </tr>
                    </thead>
                    <tbody class="tbody">
                        @{Html.RenderPartial("_ItemOfPage", Model); }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="package package-items col-sm-2">

        </div>
    </div>
</div>
<input type="hidden" value="created-desc" id="sort-jp" />
<input type="hidden" value="" id="StoreJPId" />
@section scripts{
    <link href="~/Content/jquery-ui-1.12.1.custom/jquery-ui.min.css" rel="stylesheet">
    <link href="~/Content/storejp.css" rel="stylesheet" />
    <link href="~/Content/shipment.css" rel="stylesheet" />
    <link href="~/Content/shipment-index.css" rel="stylesheet" />
    <!--Update script từ đây-->
    <!--Selectpicker-->
    <link href="~/HTML/bootstrap-select.css" rel="stylesheet" />
    <script src="~/HTML/bootstrap-select.js"></script>
    <!--Scroll-->
    <script src="~/HTML/jquery.slimscroll.js"></script>
    <script src="~/Scripts/shipment.js"></script>
    <script src="~/Scripts/shipment-index.js"></script>
    <!--Kết thúc-->
}