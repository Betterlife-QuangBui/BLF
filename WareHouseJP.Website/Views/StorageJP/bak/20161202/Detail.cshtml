    <script>
        //dialog delete
        $(function () {
            $(".table_insert").find("input,button,textarea,select").attr("disabled", "disabled");
            if ($("#statusModel").val() == 8) {
                $('#storejp-table tbody').find("input,button,textarea,select").attr("disabled", "disabled");
            }
            $(".hiden-column-content").hide(); $(".hiden-column-title").show();
        });
        $(function () {
            $(".hiden-column input[type=checkbox]").each(function (i, e) {
                var index = parseInt($(e).attr("data-index")) + 1;
                if (e.checked) {
                    $('#storejp-table tr > *:nth-child(' + index + ')').show();
                }
                else {
                    $('#storejp-table tr > *:nth-child(' + index + ')').hide();
                }
            });
            $(".hiden-column input[type=checkbox]").click(function () {
                $(".hiden-column input[type=checkbox]").each(function (i, e) {
                    var index = parseInt($(e).attr("data-index")) + 1;
                    if (e.checked) {
                        $('#storejp-table tr > *:nth-child(' + index + ')').show();
                    }
                    else {
                        $('#storejp-table tr > *:nth-child(' + index + ')').hide();
                    }
                });
            });
            //appytable headers
            //$(".fixed_headerstwo thead").hide();
            lengthtwo = $(".fixed_headerstwo tbody tr").length;
            if (lengthtwo >= 1) {
                $(".fixed_headersone tbody").html("<tr>"+$(".fixed_headerstwo tbody tr:eq(1)").html()+"</tr>");
                //$(".fixed_headersone tbody tr:eq(0)").hide();
                $(".fixed_headersone").hide()
            }
            $(".div-table-heaer-one").scroll(function () { //.box is the class of the div
                if ($(this).scrollTop() >= 80) {
                    $(".div-table-heaer").css("height","92px")
                    $(".fixed_headersone").show();
                } else {
                    $(".fixed_headersone").hide();
                    $(".div-table-heaer").css("height", "0px")
                }
            });
        });
    </script>
