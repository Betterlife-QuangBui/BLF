@model TrackingStatu

@{
    Layout = "~/Views/Shared/_LayoutCRUD.cshtml";
}
<ol class="breadcrumb editbreadcrum">
    <li><a href="/" target="_parent"><i class="glyphicon glyphicon-home"></i> Trang chủ</a></li>
    <li><a href="/TrackingStatus/" target="_parent">Trạng thái kiện hàng</a></li>
    <li class="active">Thêm trạng thái</li>
</ol>
<div class="">
    @using (Html.BeginForm("Edit", "TrackingStatus", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <table class="table_insert col-md-12" align="center" style="width:100%;">
            <tr>
                <td class="tt-title-form"><b>Tên trạng thái <span class="error">(*)</span></b></td>
                <td>:</td>
                <td>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td class="tt-title-form"><b>Thứ tự <span class="error">(*)</span></b></td>
                <td>:</td>
                <td>
                    @Html.EditorFor(model => model.NoOrder, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NoOrder, "", new { @class = "text-danger" })
                </td>
            </tr>

            <tr>
                <td></td>
                <td></td>
                <td>
                    <input type="hidden" value="@Model.CreatedAt" name="CreatedAt" />
                    <input type="hidden" value="@Model.Id" name="Id" />
                    <input type="hidden" value="@Model.CreatedBy" name="CreatedBy" />
                    <button type="submit" class="btncreate btn btn-large btn-success tt-margin-right tt-width-button"><i class="glyphicon glyphicon-floppy-disk"></i> Lưu</button>
                    <button type="reset" class="btn btn-large btn-info tt-width-button"><i class="glyphicon glyphicon-refresh"></i> Xóa</button>
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td>
                    @Html.ValidationSummary(false)
                </td>
            </tr>
        </table>

    }
</div>
